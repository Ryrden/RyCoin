{
  "compilerOptions": {
    "target": "ES2020",                           // Specify ECMAScript target
    "module": "ESNext",                           // Use Esnext modules 
    "outDir": "./dist",                           // Output folder for compiled JavaScript
    "rootDir": "./src",                           // Root folder for TypeScript files
    "moduleResolution": "node",                   // Use Node.js module resolution strategy
    "lib": [
      "ES2020",                                   // Include ECMAScript 2020
      "dom"                                       // Include DOM
    ],
    "sourceMap": true,                            // Enable source maps for debugging
    "esModuleInterop": true,                      // Ensures proper handling of CommonJS modules
    "allowSyntheticDefaultImports": true,         // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,     // Consistent casing in imports
    "strict": true,                               // Enable all strict type-checking options
  },
  "include": ["src/**/*"],                        // Ensure all .ts files in src/ are included
  "exclude": ["node_modules"]                     // Exclude node_modules from compilation
}